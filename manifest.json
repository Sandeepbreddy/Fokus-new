{
    "manifest_version": 3,
    "name": "Fokus: Keyword & Domain Blocker",
    "version": "1.0.0",
    "description": "Take control of your digital focus. Block distractions, boost productivity.",
    "author": "Fokus Team",
    "action": {
        "default_popup": "popup.html",
        "default_title": "Fokus: Keyword & Domain Blocker"
    },
    "background": {
        "service_worker": "js/background.js"
    },
    "content_scripts": [
        {
            "matches": [
                "http://*/*",
                "https://*/*"
            ],
            "js": [
                "js/content.js"
            ],
            "run_at": "document_idle",
            "all_frames": true
        }
    ],
    "permissions": [
        "storage",
        "tabs",
        "webNavigation",
        "declarativeNetRequest",
        "alarms",
        "notifications",
        "contextMenus"
    ],
    "host_permissions": [
        "<all_urls>"
    ],
    "web_accessible_resources": [
        {
            "resources": [
                "blocked.html",
                "css/blocked.css",
                "assets/*"
            ],
            "matches": [
                "<all_urls>"
            ]
        }
    ]
}